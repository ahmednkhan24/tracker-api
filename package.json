{
  "name": "tracker-api",
  "version": "1.0.0",
  "description": "Tracker Api",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./",
    "pretest": "npm run lint",
    "test": "jest --verbose --coverage",
    "predev": "npm run lint",
    "dev": "nodemon --exec babel-node ./src/index.js",
    "start": "babel-node ./src/index.js",
    "build": "webpack",
    "prod": "node ./dist/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahmednkhan24/Tracker-Api.git"
  },
  "author": "Ahmed Khan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ahmednkhan24/Tracker-Api/issues"
  },
  "homepage": "https://github.com/ahmednkhan24/Tracker-Api#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "express-sanitizer": "^1.0.5",
    "mongoose": "^5.8.9",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "babel-polyfill": "^6.26.0",
    "copy-webpack-plugin": "^5.1.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "dist/"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "airbnb-base"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "node_modules/",
      "coverage/",
      "dist/"
    ],
    "rules": {
      "no-console": "off"
    }
  }
}
